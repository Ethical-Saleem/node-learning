<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <div class="sub-nav">
      <div class="page-pane">
        <p class="page-title">Product</p>
      </div>
    </div>
    <div class="main-content">
      <div class="add-form">
        <form action="/admin/updateProduct" method="POST">
          <div class="form-group">
            <label class="form-label" for="name">Product Name</label>
            <input class="form-input" type="text" name="name" value="<%= product.name %>" />
          </div>
          <div class="form-group">
            <label class="form-label" for="amount">Amount</label>
            <input class="form-input" type="float" name="amount" value="<%= product.amount %>" />
          </div>
          <div class="form-group">
            <label class="form-label" for="img">Product Image</label>
            <input class="form-input" type="text" name="imgUrl" value="<%= product.imgUrl %>" />
          </div>
          <div class="form-group">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-input" rows="4" cols="9" name="description"><%= product.description %></textarea>
          </div>
          <div class="form-group">
            <input class="form-input" type="hidden" name="productId" value="<%= product.id %>" />
          </div>
          <div>
            <button class="submit" type="submit">Update</button>
          </div>
        </form>
      </div>
    </div>
<%- include('../includes/end.ejs') %>
