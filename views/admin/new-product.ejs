    <%- include('../includes/nav.ejs') %>
    <div class="sub-nav">
      <div class="page-pane">
        <p class="page-title">Shop</p>
      </div>
    </div>
    <div class="main-content">
      <div class="add-form">
        <form action="/admin/postProduct" method="POST">
          <div class="form-group">
            <label class="form-label" for="productName">Product Name</label>
            <input class="form-input" type="text" name="productName" />
          </div>
          <div class="form-group">
            <label class="form-label" for="amount">Amount</label>
            <input class="form-input" type="float" name="amount" />
          </div>
          <div class="form-group">
            <label class="form-label" for="quantity">Quantity</label>
            <input class="form-input" type="float" name="quantity" />
          </div>
          <div class="form-group">
            <label class="form-label" for="img">Product Image</label>
            <input class="form-input" type="text" name="imageUrl" />
          </div>
          <div class="form-group">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-input" rows="4" cols="9" name="description"></textarea>
          </div>
          <div>
            <button class="submit" type="submit">Create</button>
          </div>
        </form>
      </div>
    </div>
